<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <RootNamespace>Iterum</RootNamespace>
    <Platforms>x64</Platforms>
    <Configurations>Debug;Release</Configurations>
    <RepositoryUrl>https://github.com/Team-Iterum/Iterum.Core</RepositoryUrl>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <Authors>Team Iterum</Authors>
    <Description>PhysX server simulation</Description>
    <PackageVersion>1.1.0-$(Configuration)-$(Platform)-$([System.DateTime]::UtcNow.ToString(yyyyMMdd-HHmmss))</PackageVersion>
    <Title>Iterum.PhysX</Title>
  </PropertyGroup>
  
  <ItemGroup>
    <PackageReference Include="AdvancedDLSupport" Version="3.1.0" />
    <PackageReference Include="Iterum.Core" Version="*" />
    <PackageReference Include="StrictEmit" Version="2.8.0" />
  </ItemGroup>

</Project>
